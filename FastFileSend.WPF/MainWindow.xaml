<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="FastFileSend.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastFileSend.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <StackPanel>
        <TabControl Margin="10">
            <TabItem Header="Downloads">
                <ListView x:Name="ListViewHistory" HorizontalContentAlignment="Stretch" ItemsSource="{Binding DownloadList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <Label Content="{Binding Id}"></Label>
                                <Label Content="{Binding Size}"></Label>
                                <Label Content="{Binding Status}"></Label>
                                <Label Content="{Binding ETA}"></Label>
                                <ProgressBar Value="{Binding Progress}" Margin="5"></ProgressBar>
                            </DockPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>
            <TabItem Header="">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button x:Name="ButtonFakeDownload" Content="Button" Click="ButtonFakeDownload_Click"/>
    </StackPanel>
</Controls:MetroWindow>
