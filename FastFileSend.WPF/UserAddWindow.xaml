<Controls:MetroWindow
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="FastFileSend.WPF.UserAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastFileSend.WPF"
        mc:Ignorable="d"
        Title="Add user" Height="189.344" Width="363.525" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closing="MetroWindow_Closing">
    <StackPanel x:Name="StackPanelContent" Margin="10">
        <Label Content="User Id:"></Label>
        <TextBox HorizontalContentAlignment="Center" Text="{Binding Id}"></TextBox>
        <Label Content="User friendly name:"></Label>
        <TextBox HorizontalContentAlignment="Center" Text="{Binding LocalName}"></TextBox>
    </StackPanel>
</Controls:MetroWindow>
